def reverse(number):
    x = len(str(number))
    y = 0
    for i in range(x):
        z = number % 10
        number = number//10
        y = (y * 10)+z

    return y

def isPalindrome(number):
    y= reverse(number)
    if number == y:
        print("yes it is palindrom")
    else:
        print("no it is NOT palidrom")

isPalindrome(232)
